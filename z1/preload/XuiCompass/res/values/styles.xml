<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="text_shadow_1">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
    <style name="text_shadow_2">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">5.0</item>
        <item name="android:shadowRadius">8.0</item>
    </style>
    <style name="lenovo_Theme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
    <style name="NotificationDialogNoTitle" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>
