<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault" />
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:actionModeBackground">@drawable/actionbar_bg</item>
        <item name="android:actionModeCloseDrawable">@null</item>
        <item name="android:actionModeCloseButtonStyle">@style/FileManager.ActionMode.CloseButton</item>
    </style>
    <style name="TranslucentAppTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="FileManager.ActionMode.CloseButton" parent="@android:style/Widget.DeviceDefault.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>
    <style name="fmProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">8.0px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">8.0px</item>
        <item name="android:mirrorForRtl">true</item>
    </style>
    <style name="MainPageTitleText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/main_page_title_text_color</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@drawable/list_item_bg_with_bottom_line_normal</item>
        <item name="android:paddingLeft">@dimen/list_margin</item>
        <item name="android:paddingBottom">7.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">36.0dip</item>
    </style>
    <style name="MainPageOtherEntry">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:paddingLeft">@dimen/list_margin</item>
        <item name="android:paddingRight">@dimen/list_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60.0dip</item>
    </style>
</resources>
