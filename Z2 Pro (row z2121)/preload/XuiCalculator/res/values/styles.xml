<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/display_background_color</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
    <style name="DisplayEditTextStyle">
        <item name="android:gravity">end|center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="PadButtonStyle">
        <item name="android:textColor">@color/pad_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0.33000004dip</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="DisplaySwitchStyle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/switch_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_switch_stroke</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
